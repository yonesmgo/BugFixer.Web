@model List<BugFixer.Domain.Entities.Questions.Answer>
@using BugFixer.Application.Extentions;
@if (Model.Count == 0)
{
    <div class="alert alert-warning">
        پاسخی یافت نشد
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="answer-item">
            <div class="top-detail">
                <span>@item.CreateDate.AsTimeAgo()  </span>
                <button><i class="icon-pencil-edit"></i></button>
            </div>
            <div class="inner">
                @Html.Raw(item.Content)

                <div class="rating-layer">
                    <div class="scoring-layer" action="" method="">
                        <button class="plus"><i class="icon-caret-up"></i></button>
                        <span> @item.Score </span>
                        <button class="negative"><i class="icon-caret-down"></i></button>
                    </div>
                    <div class="selected-answer">
                        @if (!item.IsTrue)
                        {
                            <button class="icon-check"></button>
                        }
                        else
                        {
                            <button class="selected"></button>
                        }
                    </div>
                </div>

            </div>

            <div class="detail-layer">
                <div class="author">
                    <a href="" class="img-layer">
                        <img src="@(BugFixer.Application.Statics.PathTools.USerAvatarPath+item.User.Avatar)">
                    </a>
                    <h3><a href="javascript:void(0)">@item.User.GetUserDisplayname() </a></h3>
                    @*<span><i>123</i> پرسش | <i>145</i> پاسخ</span>*@
                </div>
                @*<a href="javascript:void(0)"> <i class="icon-back-arrow"></i> ثبت پاسخ </a>*@
            </div>
        </div>
    }
}
